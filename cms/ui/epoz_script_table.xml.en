<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns:stl="http://xml.itools.org/namespaces/stl" xmlns="http://www.w3.org/1999/xhtml">
<head>

<title>Epoz3</title>

<style type="text/css">
<!--
* {font-family: Arial, Helvetica, Sans-Serif; font-size: 12px;}
//-->
</style>

<script type="text/javascript">

function SubmitForm() {
 rows = document.getElementById('rows').value;
 cols = document.getElementById('cols').value;
 border = document.getElementById('border').value;
 head = document.getElementById('head').value;
 window.opener.CreateTable(rows, cols, border, head);
 window.close();
};

</script>
</head>

<body onload="this.focus();">

<form>
<table border="0" cellspacing="4" cellpadding="4">
<tbody>

 <tr>
  <td>Table rows</td>
  <td><input type="text" name="rows" id="rows" size="5" value="3" /></td>
 </tr>

 <tr>
  <td>Table columns</td>
  <td><input type="text" name="cols" id="cols" size="5" value="3" /></td>
 </tr>

 <tr>
  <td>Border</td>
  <td><input type="text" name="border" id="border" size="5" value="1" /></td>
 </tr>

 <tr>
  <td colspan="2">
        <select id="head" name="head">
          <option value="0">Without head</option>
          <option value="1">With head</option>
         </select>
   </td>
 </tr>

 <tr>
  <td colspan="2">
   <button type="button" onclick="return SubmitForm();">Insert table</button>
  </td>
 </tr>

 </tbody>
</table>

</form>
</body>
</html>
